{#
/**
 * @file
 * Theme override to display a node.
 */
#}
{% set layout = layout ? 'layout--' ~ layout|clean_class %}

{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    layout ? 'grid-full',
    layout ? 'ie11-autorow',
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
<article{{ attributes.addClass(classes) }}>
  <div{{ content_attributes.addClass('node__content', layout) }}>
    {{ content }}
    <h2{{ title_attributes.addClass('node__title') }}>
      <a href="{{ path('entity.node.edit_form', {'node': node.id}) }}" class="use-ajax" data-dialog-type="modal" data-dialog-options="{&quot;width&quot;:&quot;50%&quot;}">
        {{ label }}
      </a>
    </h2>
    <a href="{{ path('snappy_common.delete', {'node': node.id}) }}">
        {{ 'Delete'|t }}
    </a>
  </div>
</article>
